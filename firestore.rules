rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products can be read by anyone, but only written by logged-in users.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Categories can be read by anyone, but only written by logged-in users.
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // A user can only read or write their own profile information.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
