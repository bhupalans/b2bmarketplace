rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // A user can only read or write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Any authenticated user can read or write to any other collection.
    // This is necessary for seeding products/categories and for general app functionality.
    // This rule does NOT apply to the /users collection because the rule above is more specific.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
