rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS: Can only read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // CATEGORIES: Read-only for authenticated users
    match /categories/{categoryId} {
      allow read: if isAuth();
    }

    // INTERNAL: Used for seeding status, only admin can access
    match /internal/{docId} {
      allow read, write: if isAdmin();
    }

    // PRODUCTS:
    match /products/{productId} {
      // READ: Anyone can read approved products. Owners and admins can read their own regardless of status.
      allow read: if resource.data.status == 'approved' 
                  || (isOwner(resource.data.sellerId))
                  || isAdmin();

      // CREATE: Authenticated users can create products, but must set themselves as the seller
      // and status must be pending.
      allow create: if isAuth()
                    && request.resource.data.sellerId == request.auth.uid
                    && request.resource.data.status == 'pending';

      // UPDATE: 
      // Sellers can update their own products, but cannot change the sellerId or status.
      // Admins can update any product (e.g., to change the status).
      allow update: if (isOwner(resource.data.sellerId) 
                      && request.resource.data.sellerId == resource.data.sellerId
                      && request.resource.data.status == resource.data.status)
                    || isAdmin();

      // DELETE: Only the owner or an admin can delete a product.
      allow delete: if isOwner(resource.data.sellerId) || isAdmin();
    }
  }
}