
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isRole(role) {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Internal documents - only accessible by admins
    match /internal/{docId} {
        allow read, write: if isRole('admin');
    }

    // Users can only read and write their own profile.
    // Admins can read any user profile.
    match /users/{userId} {
      allow get: if isOwner(userId) || isRole('admin');
      allow list: if isRole('admin');
      allow update: if isOwner(userId);
    }
    
    // All users (including logged-out visitors) can read categories
    match /categories/{categoryId=**} {
      allow get, list: if true;
    }
    
    // Products have more complex rules
    match /products/{productId} {
      // Allow reading a single product or listing multiple products.
      // Anyone can see 'approved' products.
      // A seller can see their own products regardless of status.
      allow get: if resource.data.status == 'approved' || isOwner(resource.data.sellerId) || isRole('admin');
      allow list: if true; // Allow listing so that queries can be performed. The rules on `get` will be enforced on the results.

      // A user can create a product if they are the seller and not trying to set the status.
      allow create: if isAuth() 
                    && request.resource.data.sellerId == request.auth.uid
                    && !('status' in request.resource.data);

      // An owner can update their product, but cannot change the sellerId or status.
      // An admin can update any product (including the status).
      allow update: if (isOwner(request.resource.data.sellerId) 
                      && request.resource.data.sellerId == resource.data.sellerId
                      && !('status' in request.resource.data))
                    || isRole('admin');

      // An owner or an admin can delete a product.
      allow delete: if isOwner(resource.data.sellerId) || isRole('admin');
    }
  }
}
