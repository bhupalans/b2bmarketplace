rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to products and categories
    match /products/{productId} {
      allow read: if true;
      // Only authenticated users can create/update products (future functionality)
      allow write: if request.auth != null;
    }

    match /categories/{categoryId} {
      allow read: if true;
      // Only authenticated users can create/update categories (future functionality)
      allow write: if request.auth != null;
    }

    // Allow anyone to read user profiles (for seller info), but only the user can edit their own profile.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
