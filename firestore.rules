rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /products/{productId} {
      // Anyone can read products.
      allow read: if true;
      
      // An authenticated user can create a product if the new document's sellerId is their own UID.
      allow create: if request.auth != null && request.resource.data.sellerId == request.auth.uid;
      
      // A user can only update a product if they are the sellerId on that document.
      allow update: if request.auth != null && resource.data.sellerId == request.auth.uid;

      // A user can only delete a product if they are the sellerId on that document.
      allow delete: if request.auth != null && resource.data.sellerId == request.auth.uid;
    }

    // Categories can be read by anyone, but only written by authenticated users (admins).
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User profiles can be read by anyone (for seller profiles), 
    // but a user can only write to their own document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
