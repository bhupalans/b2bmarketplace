rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isUserAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read, write: if isUser(userId) || isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /products/{productId} {
      // Anyone can read approved products
      allow read: if resource.data.status == 'approved';

      // Admins can read any product
      allow read: if isAdmin();
      
      // An authenticated user can create a product...
      allow create: if isUserAuthenticated()
        // ...if they are the seller...
        && request.resource.data.sellerId == request.auth.uid
        // ...and they are not trying to approve it themselves.
        && request.resource.data.status == 'pending';
      
      // An existing product can be updated...
      allow update: if 
        // ...by an admin (for approval/rejection)
        isAdmin() || 
        // ...or by the original seller...
        (isUser(resource.data.sellerId) 
          // ...but the seller cannot change the status or sellerId.
          && request.resource.data.status == 'pending'
          && request.resource.data.sellerId == resource.data.sellerId);

      // A product can be deleted by its seller or an admin.
      allow delete: if isUser(resource.data.sellerId) || isAdmin();
    }

    // Allow admins to read/write internal documents like seed status
    match /internal/{docId} {
      allow read, write: if isAdmin();
    }
  }
}