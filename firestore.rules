
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Anyone can read user profiles (for seller pages, etc.)
      allow read: if true;
      // Only the authenticated user can write to their own document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /products/{productId} {
      // Anyone can read product listings.
      allow read: if true;
      
      // A logged-in user can create a product if the sellerId matches their own UID.
      allow create: if request.auth != null && request.resource.data.sellerId == request.auth.uid;
      
      // The owner of a product can update or delete it.
      allow update, delete: if request.auth != null && resource.data.sellerId == request.auth.uid;
    }

    match /categories/{categoryId} {
        // Anyone can read categories
        allow read: if true;
        // No one should write to categories from the client
        allow write: if false;
    }
  }
}
