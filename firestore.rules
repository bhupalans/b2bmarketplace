rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only manage their own profiles
    match /users/{userId} {
      allow read; // Allow public read for seller profiles
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Products and Categories are public to read
    match /products/{productId} {
      allow read;
      allow write: if request.auth != null; // Only logged-in users can create/update
    }

    match /categories/{categoryId} {
      allow read;
      allow write: if request.auth != null; // Only logged-in users can create/update
    }
  }
}
