
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Anyone can read products and categories
    match /products/{productId} {
      allow read: if true;
      // Only authenticated users who are the designated seller can write
      allow write: if request.auth != null && request.resource.data.sellerId == request.auth.uid;
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false; // Disallow writing to categories for now
    }

    // Authenticated users can read other user profiles, but only write to their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    // Rules for the 'messages' collection
    match /messages/{messageId} {
      // A user can read a message if their UID is in the `participants` array.
      // A user can also query the collection (`list`) if their query checks
      // for their own UID in the `participants` array. This is key for the chat to work.
      allow list, read: if request.auth.uid in resource.data.participants;

      // A user can create a message if they are the sender, and their UID
      // is included in the `participants` array of the new message.
      allow create: if request.auth.uid == request.resource.data.senderId &&
                     request.auth.uid in request.resource.data.participants;
    }
  }
}
