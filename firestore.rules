rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Anyone can read a user's public profile
      allow read;
      // Only the authenticated user can create or update their own profile
      allow create, update: if isAuthenticated() && isOwner(userId);
    }

    match /categories/{categoryId} {
      // Anyone can read categories
      allow read;
      // Disallow all writes for now
      allow write: if false;
    }

    match /products/{productId} {
      // Allow anyone to read a product if it is approved
      allow get: if resource.data.status == 'approved';
      
      // Rules for listing multiple products
      allow list: if 
        // Allow anyone to list products that are approved (for the main product page)
        resource.data.status == 'approved' ||
        // Allow admins to list all products (for the admin approvals page)
        (isAuthenticated() && isAdmin(request.auth.uid));

      // Allow authenticated sellers to create products
      allow create: if isAuthenticated() && request.resource.data.sellerId == request.auth.uid;
      
      // Allow updates under specific conditions
      allow update: if isAuthenticated() && 
        (
          // Condition 1: The user is an admin and is only changing the status field
          (isAdmin(request.auth.uid) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])) ||
          // Condition 2: The user is the seller who owns the product
          (isOwner(resource.data.sellerId))
        );
        
      // Allow the seller who owns the product to delete it
      allow delete: if isAuthenticated() && isOwner(resource.data.sellerId);
    }
    
    // Lock down internal collections
    match /internal/{docId} {
      allow read, write: if false; // Should only be accessible via Admin SDK
    }
  }
}
