rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isSeller() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'seller';
    }

    // Users can only read/write to their own document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Any authenticated user can read categories
    match /categories/{categoryId} {
        allow read: if request.auth != null;
    }

    // Products
    match /products/{productId} {
      // Anyone can read approved products
      allow get: if resource.data.status == 'approved';
      
      // Logged-in users can list approved products. Sellers can list their own products. Admins can list all.
      allow list: if request.auth != null;

      // Sellers can create products if they are the owner
      allow create: if isSeller() && request.resource.data.sellerId == request.auth.uid
                    // Ensure they cannot set the status themselves on create
                    && request.resource.data.status == 'pending';

      // Sellers can update their own products. Admins can update any product.
      allow update: if (isSeller() && resource.data.sellerId == request.auth.uid
                       // Sellers cannot approve their own products
                       && request.resource.data.status == 'pending'
                       // Sellers cannot change the sellerId
                       && request.resource.data.sellerId == resource.data.sellerId)
                    || isAdmin();

      // Only the seller or an admin can delete a product
      allow delete: if (isSeller() && resource.data.sellerId == request.auth.uid) || isAdmin();
    }
    
    // Internal documents (e.g., seed status) should not be client-accessible
    match /internal/{docId} {
      allow read, write: if false;
    }
  }
}
