
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Anyone can read user profiles (for seller pages, etc.)
      allow read: if true;
      // Only the authenticated user can write to their own document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /products/{productId} {
      // Anyone can read product listings.
      allow read: if true;
      // Only authenticated users who are the seller for the product can create, update, or delete it.
      allow write: if request.auth != null && request.auth.uid == request.resource.data.sellerId;
    }

    match /categories/{categoryId} {
        // Anyone can read categories
        allow read: if true;
    }
  }
}
