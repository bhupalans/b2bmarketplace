rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match the product image upload path: `products/{sellerId}/{imageId}`
    match /products/{sellerId}/{allPaths=**} {
      // Allow read access to anyone (for displaying images)
      allow read: if true;
      
      // Allow write (create, update, delete) access only if the
      // authenticated user's ID matches the sellerId in the path.
      allow write: if request.auth != null && request.auth.uid == sellerId;
    }
  }
}