
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all product images by default.
    // This is generally safe as long as the URLs are not easily guessable.
    match /products/{path=**} {
      allow read: if true;
    }

    // Only allow an authenticated user to upload images to their own seller folder.
    // This is the critical rule that allows sellers to upload images for their products.
    match /products/{sellerId}/{imageName} {
      allow write: if request.auth != null && request.auth.uid == sellerId;
    }
  }
}
