rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'products' directory
    match /products/{allPaths=**} {
      // Anyone can read product images, as they are public-facing.
      allow read: if true;
    }

    // Secure user-specific uploads
    // This rule allows a user to write to a folder that matches their UID.
    match /products/{userId}/{fileName} {
      // A user can only upload files to their own folder.
      // This prevents users from overwriting each other's images.
      // We also check that the user is a seller.
      allow write: if request.auth != null && request.auth.uid == userId && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'seller';
    }
  }
}
