rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // --- USER AVATARS ---
    // Allow public read for all avatars.
    // Allow a user to write/update their own avatar.
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // --- PRODUCT IMAGES ---
    // Allow public read for all product images.
    // Allow a user to create or delete an image if the path's sellerId matches their UID.
    // This allows sellers to manage their own product images.
    match /products/{sellerId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == sellerId;
    }
  }
}